void setup() {
  pinMode(7, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(13, OUTPUT);
}

void loop() {
  // LED 1 menyala
  digitalWrite(7, HIGH);
  digitalWrite(12, LOW);
  digitalWrite(13, LOW);
  delay(1000); // 1 detik

  // LED 2 menyala
  digitalWrite(7, LOW);
  digitalWrite(12, HIGH);
  digitalWrite(13, LOW);
  delay(1000); // 1 detik

  // LED 3 menyala
  digitalWrite(7, LOW);
  digitalWrite(12, LOW);
  digitalWrite(13, HIGH);
  delay(1000); // 1 detik
}
